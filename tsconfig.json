{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dist/types/**/*.ts",
    ".next/types/**/*.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "./cypress.config.ts",
     "cypress", 
     "**/*.cy.tsx"
  ]
}
